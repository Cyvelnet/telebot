{
    "preset": "psr12",
    "rules": {
        "simplified_null_return": true,
        "braces": false,
        "binary_operator_spaces": {
            "operators": {
                "=>": "align_single_space_minimal"
            }
        },
        "new_with_braces": {
            "anonymous_class": false,
            "named_class": false
        },
        "trailing_comma_in_multiline": true
    }
}